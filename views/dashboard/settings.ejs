    .nav-pills {
        display: flex;
        flex-direction: row;
        overflow-x: auto;
        white-space: nowrap;
        -webkit-overflow-scrolling: touch;
    }

    .nav-pills .nav-link {
        flex: 0 0 auto;
    }
}

