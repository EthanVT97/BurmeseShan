<%- include('../partials/header', { title: 'Transactions', subtitle: 'Transaction History', breadcrumb: 'Transactions' }) %>

<!-- Main Content -->
<div class="container-fluid py-3 py-lg-4">
    <!-- Page Header -->
    <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3 mb-4">
        <div>
            <h1 class="h3 mb-1">Transactions</h1>
            <p class="mb-0 text-muted">View and manage all transactions</p>
        </div>
        <div>
            <button type="button" class="btn btn-sm btn-outline-primary refresh-transactions">
                <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
        </div>
    </div>

    <!-- Transactions Table Card -->
    <div class="table-card">
        <div class="card-header d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2">
            <h5 class="card-title mb-0">All Transactions</h5>
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                    <i class="bi bi-funnel"></i> Filter
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item filter-type" data-type="all" href="#">All Types</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item filter-type" data-type="deposit" href="#">Deposits</a></li>
                    <li><a class="dropdown-item filter-type" data-type="withdrawal" href="#">Withdrawals</a></li>
                    <li><a class="dropdown-item filter-type" data-type="point_adjustment" href="#">Point Adjustments</a></li>
                    <li><a class="dropdown-item filter-type" data-type="commission" href="#">Commissions</a></li>
                </ul>
            </div>
        </div>
        <div class="card-body px-0 px-sm-3">
            <div class="table-responsive">
                <table id="transactionsTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Player</th>
                            <th>Type</th>
                            <th>Amount (MMK)</th>
                            <th>Status</th>
                            <th>Processed By</th>
                            <th>Remark</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Data will be loaded via AJAX -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- View Transaction Modal -->
<div class="modal slide-up" id="viewTransactionModal" tabindex="-1" role="dialog" aria-labelledby="viewTransactionModalLabel" aria-modal="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Transaction Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="transaction-details">
                    <div class="row mb-3">
                        <div class="col-4 fw-bold">Transaction ID</div>
                        <div class="col-8" id="view-transaction-id"></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 fw-bold">Player</div>
                        <div class="col-8" id="view-player"></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 fw-bold">Type</div>
                        <div class="col-8" id="view-type"></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 fw-bold">Amount</div>
                        <div class="col-8" id="view-amount">MMK 0</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 fw-bold">Status</div>
                        <div class="col-8" id="view-status"></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 fw-bold">Processed By</div>
                        <div class="col-8" id="view-processed-by"></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 fw-bold">Remark</div>
                        <div class="col-8" id="view-remark"></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-4 fw-bold">Date</div>
                        <div class="col-8" id="view-date"></div>
                    </div>
                    <div id="payment-details-section" style="display: none;">
                        <hr>
                        <h6 class="mb-3">Payment Details</h6>
                        <div class="row mb-3">
                            <div class="col-4 fw-bold">Payment Method</div>
                            <div class="col-8" id="view-payment-method"></div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4 fw-bold">Payment Details</div>
                            <div class="col-8" id="view-payment-details"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Toast Container for Notifications -->
<div id="toastContainer" class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050"></div>

<%- include('../partials/footer') %>

<!-- Page specific script -->
<script src="/js/transactions.js"></script>
