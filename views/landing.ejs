<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Burmese SHAN - Welcome</title>
    
    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/landing.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/burmeseshanlogo.jpg" alt="Burmese SHAN Logo" class="navbar-logo me-2">
                <span>Burmese SHAN</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#games">Games</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#promotions">Promotions</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header class="hero">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12 text-center">
                    <img src="/burmeseshanlogo.jpg" alt="Burmese SHAN Logo" class="hero-logo mb-4">
                    <h1 class="display-4 text-white mb-4">Welcome to Burmese SHAN</h1>
                    <p class="lead text-white mb-5">Experience the Ultimate Gaming Adventure</p>
                    <div class="cta-buttons">
                        <a href="#games" class="btn btn-primary btn-lg me-3">
                            <i class="bi bi-controller me-2"></i>Play Now
                        </a>
                        <a href="#promotions" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-gift me-2"></i>View Promotions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Features Section -->
    <section id="features" class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2>Why Choose Burmese SHAN</h2>
                    <p class="lead text-muted">Experience the Best Gaming Platform</p>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="feature-card text-center">
                        <i class="bi bi-shield-check feature-icon mb-3"></i>
                        <h3>100% Secure</h3>
                        <p>Your security is our top priority. Play with peace of mind.</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="feature-card text-center">
                        <i class="bi bi-lightning-charge feature-icon mb-3"></i>
                        <h3>Fast Payouts</h3>
                        <p>Quick and hassle-free transactions, anytime.</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="feature-card text-center">
                        <i class="bi bi-headset feature-icon mb-3"></i>
                        <h3>24/7 Support</h3>
                        <p>Our dedicated team is always here to help you.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Games Section -->
    <section id="games" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center mb-5">
                        <h2>Our Games</h2>
                        <p>Discover our collection of exciting Shan card games</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <% games.forEach(function(game) { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="game-card">
                            <div class="game-image">
                                <img src="<%= game.imageUrl %>" 
                                     alt="<%= game.title %>"
                                     onerror="this.onerror=null; this.src='/images/games/default-game.svg';"
                                     class="img-fluid">
                            </div>
                            <div class="game-content">
                                <h3><%= game.title %></h3>
                                <p><%= game.description %></p>
                                <a href="#" class="btn btn-primary">Play Now</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Promotions Section -->
    <section id="promotions" class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h2>Latest Promotions</h2>
                    <p class="lead text-muted">Don't miss out on these amazing offers</p>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="promo-card">
                        <div class="promo-content">
                            <h3>Welcome Bonus</h3>
                            <p class="mb-3">Get 100% bonus on your first deposit up to 100,000 MMK</p>
                            <a href="#" class="btn btn-outline-primary">Claim Now</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="promo-card">
                        <div class="promo-content">
                            <h3>Daily Cashback</h3>
                            <p class="mb-3">Enjoy 10% daily cashback on all your games</p>
                            <a href="#" class="btn btn-outline-primary">Learn More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <img src="/burmeseshanlogo.jpg" alt="Burmese SHAN Logo" class="footer-logo me-2">
                    <span class="align-middle">Burmese SHAN</span>
                </div>
                <div class="col-md-6">
                    <div class="social-links text-center text-md-end">
                        <a href="#" class="text-white"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-telegram"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-viber"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        // Pass user data to window object for chat
        window.currentUser = {
            id: '<%= typeof user !== "undefined" && user ? user.id : "guest_" + Date.now() %>',
            name: '<%= typeof user !== "undefined" && user ? user.username : null %>'
        };

        // Initialize chat elements
        document.addEventListener('DOMContentLoaded', function() {
            const chatButton = document.getElementById('chatButton');
            const chatInterface = document.getElementById('chatInterface');
            const messageInput = document.getElementById('messageInput');
            const sendButton = document.getElementById('sendMessage');
            const messagesContainer = document.getElementById('messagesContainer');
            const guestNameModal = new bootstrap.Modal(document.getElementById('guestNameModal'));
            const closeChat = document.querySelector('.close-chat');
            
            let chatManager = null;

            // Initialize chat with guest name
            function initChat(guestName = null) {
                const userId = window.currentUser.id;
                const userName = guestName || window.currentUser.name;
                
                if (!userName) {
                    guestNameModal.show();
                    return;
                }

                chatManager = new ChatManager(userId, userName);
                chatInterface.classList.add('active');
                messageInput.disabled = false;
                sendButton.disabled = false;
                messageInput.focus();
            }

            // Chat button click handler
            chatButton.addEventListener('click', () => {
                if (!chatManager) {
                    if (window.currentUser.name) {
                        initChat();
                    } else {
                        guestNameModal.show();
                    }
                } else {
                    chatInterface.classList.toggle('active');
                    if (chatInterface.classList.contains('active')) {
                        messageInput.focus();
                        chatManager.resetUnreadCount();
                    }
                }
            });

            // Close chat handler
            closeChat.addEventListener('click', () => {
                chatInterface.classList.remove('active');
            });

            // Send message handler
            function sendMessage() {
                if (chatManager && messageInput.value.trim()) {
                    chatManager.sendMessage(messageInput.value);
                }
            }

            // Send button click handler
            sendButton.addEventListener('click', sendMessage);

            // Enter key handler
            messageInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    sendMessage();
                }
            });

            // Guest name modal handler
            document.getElementById('startChatBtn').addEventListener('click', () => {
                const guestNameInput = document.getElementById('guestNameInput');
                const guestName = guestNameInput.value.trim();
                
                if (guestName) {
                    initChat(guestName);
                    guestNameModal.hide();
                    guestNameInput.value = '';
                }
            });

            // Handle window focus
            window.addEventListener('focus', () => {
                if (chatManager && chatInterface.classList.contains('active')) {
                    chatManager.resetUnreadCount();
                }
            });
        });
    </script>
    <script src="/js/chat.js"></script>

    <!-- Chat Widget -->
    <div class="chat-container">
        <!-- Chat Button -->
        <button type="button" id="chatButton" class="chat-button" aria-label="Start chat">
            <i class="bi bi-chat-dots-fill"></i>
            <span class="chat-badge d-none">1</span>
        </button>

        <!-- Chat Interface -->
        <div id="chatInterface" class="chat-widget">
            <div class="chat-header">
                <div class="d-flex align-items-center">
                    <i class="bi bi-headset me-2"></i>
                    <h5 class="mb-0">Live Support</h5>
                </div>
                <button type="button" class="close-chat btn-close" aria-label="Close chat"></button>
            </div>
            <div class="messages-container" id="messagesContainer">
                <div class="message system">
                    Welcome to Burmese SHAN support! 🎮
                    <br>How can we help you today?
                </div>
            </div>
            <div class="chat-input">
                <div class="input-group">
                    <input type="text" id="messageInput" class="form-control" placeholder="Type your message..." 
                           aria-label="Type your message" disabled>
                    <button type="button" id="sendMessage" class="btn btn-primary" aria-label="Send message" disabled>
                        <i class="bi bi-send-fill"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Guest Name Modal -->
    <div class="modal fade" id="guestNameModal" tabindex="-1" aria-labelledby="guestNameModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="guestNameModalLabel">
                        <i class="bi bi-person-circle me-2"></i>Start Chat
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="guestNameInput" class="form-label">Please enter your name to start chatting</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person"></i>
                            </span>
                            <input type="text" class="form-control" id="guestNameInput" 
                                placeholder="Your name" required 
                                minlength="2" maxlength="50">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="startChatBtn">
                        <i class="bi bi-chat-dots me-2"></i>Start Chat
                    </button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
