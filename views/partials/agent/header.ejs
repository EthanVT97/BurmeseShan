<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Agent Dashboard">
    <title><%= title %> - Agent Dashboard</title>
    
    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap5.min.css">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/responsive.css">

    <!-- Core JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/responsive.bootstrap5.min.js"></script>
</head>
<body>
    <div id="nav-bar">
        <input type="checkbox" id="nav-toggle">
        <div id="nav-header">
            <a id="nav-title" href="/agent/dashboard" class="d-flex align-items-center">
                <i class="bi bi-person-badge-fill me-2"></i> Agent
            </a>
            <label for="nav-toggle" id="nav-toggle-label" class="d-block d-lg-none">
                <span id="nav-toggle-burger"></span>
            </label>
            <hr>
        </div>
        <div id="nav-content">
            <a href="/agent/dashboard" class="nav-button">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
            <a href="/agent/players" class="nav-button">
                <i class="bi bi-people-fill"></i>
                <span>Players</span>
            </a>
            <a href="/agent/transactions" class="nav-button">
                <i class="bi bi-cash-stack"></i>
                <span>Transactions</span>
            </a>
            <hr>
            <a href="/agent/profile" class="nav-button">
                <i class="bi bi-person-circle"></i>
                <span>Profile</span>
            </a>
            <a href="/agent/logout" class="nav-button">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </a>
            <div id="nav-content-highlight"></div>
        </div>
    </div>

    <div class="main-content">
        <!-- Page Header -->
        <div class="bg-white shadow-sm mb-4">
            <div class="container-fluid py-4">
                <div class="row align-items-center">
                    <div class="col">
                        <h1 class="h3 mb-0"><%= title %></h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0">
                                <li class="breadcrumb-item"><a href="/agent/dashboard">Home</a></li>
                                <li class="breadcrumb-item active"><%= breadcrumb %></li>
                            </ol>
                        </nav>
                    </div>
                    <% if (typeof actionButton !== 'undefined') { %>
                        <div class="col-auto">
                            <%= actionButton %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Main Content Container -->
        <div class="container-fluid">
            <!-- Toast Container -->
            <div id="toastContainer" class="position-fixed top-0 end-0 p-3" style="z-index: 1500;"></div>
